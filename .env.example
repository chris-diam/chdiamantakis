# ===========================================
# FRONTEND (Vite) - Used during build
# ===========================================
# Production: Your deployed backend URL
VITE_API_URL=https://your-backend.onrender.com/api
VITE_SOCKET_URL=https://your-backend.onrender.com

# Local development
# VITE_API_URL=http://localhost:3001/api
# VITE_SOCKET_URL=http://localhost:3001

# ===========================================
# BACKEND (Node.js Server)
# ===========================================
# Port for the server
PORT=3001

# Frontend URL for CORS (production)
CLIENT_URL=https://chris-diam.github.io

# MongoDB connection string
# For local: mongodb://localhost:27017/pokemon-world
# For production: Get from MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pokemon-world

# JWT Secret for authentication (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-here

# Google OAuth (optional - for Google login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-backend.onrender.com/api/auth/google/callback
